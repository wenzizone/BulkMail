            javascript:
              var so = new SWFObject("/swf/uploader.swf", "solmetraUploaderMovie_8888", "500", "50", "8", "#ffffff");
               so.useExpressInstall("/swf/expressinstall.swf");
               so.addParam("allowScriptAccess", "always");
               so.addParam("allowFullScreen", "false");
               so.addVariable("language", "ch");                     // [optional] language to use for textual prompts
               //so.addVariable("baseurl", "./");                      // [optional] will be applied to all eternal calls except uploadurl
               so.addVariable("uploadurl", "/import");            // [optional] an url to post files to; relative to uploader.swf
               so.addVariable("config", "/swf/uploader.xml");             // [optional] path to front-end configuration file
               so.addVariable("instance", "8888");          // instance id - should be unique
               //so.addVariable("allowed", "");
               so.addVariable("disallowed", "php,php3,php4,php5");
               so.addVariable("verifyupload", "true");
               so.addVariable("configXml", "");
               //so.addVariable("maxsize", "2097152");
               so.addVariable("hijackForm", "yes");
               so.addVariable("externalErrorHandler", "SolmetraUploader.broadcastError");
               so.addVariable("externalEventHandler", "SolmetraUploader.broadcastEvent");
               so.write("solmetraUploaderPlaceholder_8888");
               solmetraUploaderMovie_8888 = document.getElementById('solmetraUploaderMovie_8888');
